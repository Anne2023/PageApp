<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="213dp"
        android:layout_height="52dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/logo_app"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rouded"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maio ▼"
            android:gravity="center" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Saldo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 3.500,00"
            android:textSize="24sp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="31dp"
                android:text="Receita" />

            <TextView
                android:id="@+id/textView4_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_alignParentEnd="true"
                android:text="R$ 3.500,00" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="Despesas" />

            <TextView
                android:id="@+id/textView5_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_alignParentStart="true"
                android:text="R$ 1.200,00" />
        </RelativeLayout>


    </LinearLayout>

    <!-- LinearLayout para os cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <!-- Card 1 -->
        <LinearLayout
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/rouded">

            <!-- Conteúdo do card 1 aqui -->
        </LinearLayout>

        <!-- Card 2 -->
        <LinearLayout
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/rouded">

            <!-- Conteúdo do card 2 aqui -->
        </LinearLayout>

        <!-- Card 3 -->
        <LinearLayout
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:background="@drawable/rouded">

            <!-- Conteúdo do card 3 aqui -->
        </LinearLayout>

        <!-- Card 4 -->
        <LinearLayout
            android:layout_width="86dp"
            android:layout_height="76dp"
            android:orientation="vertical"
            android:background="@drawable/rouded">

            <!-- Conteúdo do card 4 aqui -->
        </LinearLayout>